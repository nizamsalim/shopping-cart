<section>
  <div class="container mt-5 ">
    {{#if user}}
    <h1 class="text-center mb-3">Welcome, {{user.name}}</h1>
    {{/if}}
    <div class="row">
      {{#each products}}
      <div class="col-lg-4 col-xl-3 col-md-6 p-3 ">
        <div class="card " style="height:29em">
          <img src="/images/product-images/{{this._id}}.jpg" class="card-img-top p-3" alt="..." style="height: 20em;">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            
            <p class="card-text">Rs. {{this.price}}</p>
            <div class="d-flex justify-content-center">
            <button class="btn btn-primary w-100" onclick="addToCart('{{this._id}}')">Add to cart</button>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>


